<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/memory_background_3">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/memory_match_play"
        android:textSize="50sp"
        android:layout_marginTop="30dp"
        android:textStyle="bold"
        android:fontFamily="cursive"
        android:textColor="#000"
        android:layout_centerHorizontal="true"
        android:id="@+id/title_tv"/>

    <ImageView
        android:layout_width="60dp"
        android:layout_height="80dp"
        android:scaleType="fitXY"
        android:src="@drawable/card_back_2"
        android:layout_marginTop="20dp"
        android:layout_marginStart="115dp"
        android:layout_below="@id/title_tv"
        android:id="@+id/card1_iv"/>

    <ImageView
        android:layout_width="60dp"
        android:layout_height="80dp"
        android:scaleType="fitXY"
        android:src="@drawable/card_back_2"
        android:layout_marginTop="20dp"
        android:layout_marginStart="185dp"
        android:layout_below="@id/title_tv"
        android:id="@+id/card2_iv"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/new_game"
        android:textAllCaps="false"
        android:textSize="25sp"
        android:fontFamily="cursive"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/card1_iv"
        android:layout_marginTop="30dp"
        android:layout_marginStart="200dp"
        android:background="@drawable/btn_shape"
        android:id="@+id/newGame_btn"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/records"
        android:fontFamily="cursive"
        android:textAllCaps="false"
        android:textSize="25sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/newGame_btn"
        android:layout_marginTop="30dp"
        android:layout_marginStart="200dp"
        android:background="@drawable/btn_shape"
        android:id="@+id/records_btn"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/rules"
        android:fontFamily="cursive"
        android:textAllCaps="false"
        android:textSize="25sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/records_btn"
        android:layout_marginTop="30dp"
        android:layout_marginStart="200dp"
        android:background="@drawable/btn_shape"
        android:id="@+id/rules_btn"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/settings"
        android:fontFamily="cursive"
        android:textAllCaps="false"
        android:textSize="25sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/rules_btn"
        android:layout_marginTop="30dp"
        android:layout_marginStart="200dp"
        android:background="@drawable/btn_shape"
        android:id="@+id/settings_btn"/>


</RelativeLayout>